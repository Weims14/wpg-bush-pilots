<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<div id="goalieContainer">
  <div class="col-sm-4 table-responsive">
    <h2 class="center">Goalies</h2>
    <table class="table-bordered">
      <thead>
        <tr>
          <th>Number</th>
          <th>Name</th>
          <th>GP</th>
          <th>Wins</th>
          <th>Loses</th>
          <th>OT Loses</th>
          <th>Win %</th>
          <th>GA</th>
          <th>GAA</th>
          <th>Shutouts</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'goaltenders/goaltender', collection: goaltenders.order(number: :asc) %>
      </tbody>
   </table>

  </div>
</div>
