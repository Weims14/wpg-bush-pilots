
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<div id="skatersContainer">
  <div class="col-sm-6 table-responsive">
    <h1 class="center">Skaters</h1>
    <table class="table-striped">
      <thead>
        <tr>
          <th>Number</th>
          <th>Name</th>
          <th>Position</th>
          <th>GP</th>
          <th>Goals</th>
          <th>Assists</th>
          <th>Points</th>
          <th>Pim</th>
        </tr>
      </thead>
      <tbody>
      <%= render partial: 'skaters/skater', collection: skaters.order(number: :asc) %>
      </tbody>
    </table>
  </div>
</div>
