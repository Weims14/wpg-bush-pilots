<p id="notice"><%= notice %></p>

<h1>Upcoming Games</h1>

<table>
  <thead>
    <tr>
      <th>Team1</th>
      <th>Team2</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_games.each do |upcoming_game| %>
      <tr>
        <td><%= upcoming_game.team1 %></td>
        <td><%= upcoming_game.team2 %></td>
        <td><%= upcoming_game.date %></td>
        <td><%= upcoming_game.time %></td>
        <td><%= upcoming_game.location %></td>
        <td><%= link_to 'Show', upcoming_game %></td>
        <td><%= link_to 'Edit', edit_upcoming_game_path(upcoming_game) %></td>
        <td><%= link_to 'Destroy', upcoming_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upcoming Game', new_upcoming_game_path %>
