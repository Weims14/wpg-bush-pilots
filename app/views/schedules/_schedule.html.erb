<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<div id="container">
<h1>Bush Pilots Schedule</h1>

<table class="col-sm-4">
  <thead>
    <tr>
      <th>Team1</th>
      <th>Score</th>
      <th>Team2</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.team1 %></td>
        <td><%= schedule.score %></td>
        <td><%= schedule.team2 %></td>
        <td><%= schedule.date %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

</div>
