
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<div id="rosterContainer">
  <div class="col-sm-6 table-responsive">
    <h1 class="center">Goalies</h1>
    <table class="table-bordered">
      <thead>
        <tr>
          <th>Number</th>
          <th>Name</th>
          <th>GP</th>
          <th>Wins</th>
          <th>Loses</th>
          <th>OT Loses</th>
          <th>Win %</th>
          <th>GA</th>
          <th>GAA</th>
          <th>Shutouts</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'goaltenders/goaltender', collection: goaltenders.order(number: :asc) %>
      </tbody>
   </table>
   <h1 class="center">Skaters</h1>
   <table class="table-bordered">
     <thead>
       <tr>
         <th>Number</th>
         <th>Name</th>
         <th>Position</th>
         <th>GP</th>
         <th>Goals</th>
         <th>Assists</th>
         <th>Points</th>
         <th>Pim</th>
       </tr>
     </thead>
     <tbody>
     <%= render partial: 'skaters/skater', collection: skaters.order(number: :asc) %>
     </tbody>
   </table>

  </div>
</div>
